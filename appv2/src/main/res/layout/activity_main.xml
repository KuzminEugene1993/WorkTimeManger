<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true">

    </ImageView>

    <TextView
        android:id="@+id/tv_startDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startDay"
        android:layout_gravity="center"
        android:textSize="30sp">
    </TextView>

    <EditText
        android:id="@+id/et_startDay"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="70sp"
        android:inputType="time"
        android:gravity="center"
        android:maxLength="5"
        android:background="@drawable/edit_text_frame"
        android:hint="@string/startDayHint"
        >
    </EditText>

    <TextView
        android:id="@+id/tv_endDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endDay"
        android:layout_gravity="center"
        android:textSize="30sp">
    </TextView>

    <EditText
        android:id="@+id/et_endDay"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textSize="70sp"
        android:inputType="time"
        android:gravity="center"
        android:maxLength="5"
        android:background="@drawable/edit_text_frame"
        android:hint="@string/startDayHint"
        >
    </EditText>

    <Button
        android:id="@+id/b_calculate"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="@string/calculate"
        android:textSize="20sp"
        android:layout_gravity="center"
        >

    </Button>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/edit_text_frame"
        >

    </TextView>

    <Button
        android:id="@+id/b_erase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/erase"
        android:textSize="20sp"
        android:gravity="center"
        >

    </Button>





</LinearLayout>